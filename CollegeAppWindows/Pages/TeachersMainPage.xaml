<Page x:Class="CollegeAppWindows.Pages.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CollegeAppWindows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1600"
      Title="TeachersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="117"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Teachers"/>
                <Button x:Name="btnAddNewEntry" Content="Add New Entry"/>
            </StackPanel>
            <Border BorderThickness="1" BorderBrush="#ebebeb"/>
        </StackPanel>

        <Frame Grid.Row="1" x:Name="ContentFrame"/>
    </Grid>
</Page>
